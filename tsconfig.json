{
    "compilerOptions": {
        "sourceMap": true,
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "allowJs": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/socket": ["../socket"],
            "@/*":      ["src/node_modules/*"]
        }
    },
    "include": [
        "src/js/**/*",
        "src/js/node_modules/**/*"
    ],
    "exclude": [
        "**/*.test.ts"
    ]
}